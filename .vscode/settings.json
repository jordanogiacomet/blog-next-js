{
  "window.zoomLevel": 1,
  "breadcrumbs.enabled": false,
  "editor.fontSize": 12,
  "debug.console.fontSize": 12,
  "terminal.integrated.fontSize": 12,
  "editor.glyphMargin": false,
  "editor.lineNumbers": "off",
  "files.eol": "\n", // Final de linha sempre ser√° LF
  "workbench.editor.labelFormat": "short",
  "editor.tabSize": 2,
  "explorer.compactFolders": false,

  // cores de sele√ß√£o
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#264F7833", // fundo da sele√ß√£o
    "editor.selectionHighlightBackground": "#264F7833" // destaque em outras ocorr√™ncias
  },

  // Code Runner
  "code-runner.clearPreviousOutput": true,
  "code-runner.runInTerminal": true,
  "code-runner.ignoreSelection": true,
  "code-runner.executorMap": {
    "typescript": "clear; npx tsx"
  },

  // Tailwind CSS
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],

  // üõ† Formata√ß√£o e Lint
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Formata√ß√£o por linguagem
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svg]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
